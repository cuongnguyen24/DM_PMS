@model int?

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/handsontable@14.3.0/dist/handsontable.full.min.css" />
<div id="phoneHotWrapper" style="overflow:auto;">
    <div id="phoneHot"></div>

    <script src="https://cdn.jsdelivr.net/npm/handsontable@14.3.0/dist/handsontable.full.min.js"></script>
    <script>
        (function () {
            const container = document.getElementById('phoneHot');

            const nestedHeaders = [
                ['Số TT', 'Tên nhân viên', 'Mã nhân viên', 'Số tài khoản', 'Chức danh', 'Định mức', 'Thực tế sử dụng', 'Phải thu']
            ];

            const columns = [
                { data: 0, type: 'numeric', width: 60 },
                { data: 1, type: 'text', width: 180 },
                { data: 2, type: 'text', width: 100 },
                { data: 3, type: 'text', width: 120 },
                { data: 4, type: 'text', width: 80 },
                { data: 5, type: 'numeric', numericFormat: { pattern: '0,0' }, width: 100 },
                { data: 6, type: 'numeric', numericFormat: { pattern: '0,0' }, width: 120 },
                { data: 7, type: 'numeric', numericFormat: { pattern: '0,0' }, readOnly: true, width: 100 },
            ];

            // Tạo dữ liệu giả lập như trong hình
            const data = [
                [1, 'Nguyễn 001', 'zzz', 'zzz', 'TP', 1000000, null, null],
                [2, 'Nguyễn 002', 'zzz', 'zzz', '', null, null, null],
                [3, 'Nguyễn 003', 'zzz', 'zzz', 'CV', 500000, 600000, 100000],
                [4, 'Nguyễn 004', 'zzz', 'zzz', '', null, null, null],
                [5, 'Nguyễn 005', 'zzz', 'zzz', '', null, null, null],
                [6, 'Nguyễn 006', 'zzz', 'zzz', '', null, null, null],
                [7, 'Nguyễn 007', 'zzz', 'zzz', '', null, null, null],
                [8, 'Nguyễn 008', 'zzz', 'zzz', '', null, null, null],
                [9, 'Nguyễn 009', 'zzz', 'zzz', '', null, null, null],
                [10, 'Nguyễn 010', 'zzz', 'zzz', '', null, null, null],
                [11, 'Nguyễn 011', 'zzz', 'zzz', '', null, null, null],
                [12, 'Nguyễn 012', 'zzz', 'zzz', '', null, null, null],
            ];

            const hot = new Handsontable(container, {
                data: data,
                columns: columns,
                colHeaders: false,
                rowHeaders: true,
                nestedHeaders: nestedHeaders,
                height: calculateHotHeight(),
                width: '100%',
                stretchH: 'all',
                manualColumnFreeze: true,
                manualColumnMove: true,
                fixedColumnsLeft: 3,
                contextMenu: {
                    items: {
                        row_above: {},
                        row_below: {},
                        hsep1: '---------',
                        freeze_column: { name: 'Cố định cột' },
                        unfreeze_column: { name: 'Bỏ cố định cột' },
                        hsep2: '---------',
                        undo: {},
                        redo: {},
                        clear_custom: {
                            name: 'Xóa nội dung các ô đã chọn',
                            callback() { hot.emptySelectedCells(); }
                        }
                    }
                },
                filters: true,
                dropdownMenu: true,
                licenseKey: 'non-commercial-and-evaluation',
                afterChange: function (changes, source) {
                    if (source === 'loadData' || !changes) return;

                    changes.forEach(([row, prop, oldVal, newVal]) => {
                        if (prop === 5 || prop === 6) {
                            const dinhMuc = hot.getDataAtCell(row, 5) || 0;
                            const thucTe = hot.getDataAtCell(row, 6) || 0;
                            const phaiThu = Math.max(0, thucTe - dinhMuc);
                            hot.setDataAtCell(row, 7, phaiThu);
                        }
                    });
                }
            });

            function calculateHotHeight() {
                const windowHeight = window.innerHeight;
                const offset = 360;
                const calculated = windowHeight - offset;
                return Math.max(calculated, 320);
            }

            window.addEventListener('resize', () => {
                const newHeight = calculateHotHeight();
                hot.updateSettings({ height: newHeight });
            });
        })();
    </script>
</div>
