@model IEnumerable<PMS.Models.TblPosition>

@{
    ViewData["Title"] = "DANH MỤC CHỨC VỤ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row row-head align-items-center">
                    <div class="col-md-8 col-sm-6 col-6">
                        <h4 class="card-title mb-0 d-none d-md-block">Quản lý chức vụ</h4>
                        <h5 class="card-title mb-0 d-md-none">Chức vụ</h5>
                    </div>
                    <div class="col-md-4 col-sm-6 col-6 text-right">
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-success d-none d-sm-inline-block">
                            <i class="fa fa-plus"></i> Thêm mới
                        </a>
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-success d-sm-none" title="Thêm mới">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>

                <!-- Thêm dòng hiển thị tổng số bản ghi -->
                <div class="row mb-3">
                    <div class="col-12 text-right">
                        <span class="text-info font-weight-bold">Tổng số: @Model.Count() bản ghi</span>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="text-nowrap" style="min-width: 40px;">#</th>
                                <th class="d-none d-md-table-cell" style="min-width: 150px;">Tên chức vụ</th>
                                <th class="d-md-none" style="min-width: 120px;">Chức vụ</th>
                                <th class="d-none d-lg-table-cell" style="min-width: 80px;">Tên viết tắt</th>
                                <th class="d-none d-xl-table-cell" style="min-width: 100px;">HS cơ bản</th>
                                <th class="d-none d-xl-table-cell" style="min-width: 100px;">HS trách nhiệm</th>
                                <th class="d-none d-lg-table-cell" style="min-width: 100px;">HS chức vụ</th>
                                <th class="d-none d-md-table-cell" style="min-width: 100px;">Ngày hiệu lực</th>
                                <th class="d-none d-xl-table-cell" style="min-width: 150px;">Mô tả</th>
                                <th class="d-none d-xl-table-cell" style="min-width: 120px;">Ghi chú</th>
                                <th style="min-width: 80px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <!-- Desktop: Tên chức vụ đầy đủ -->
                                        <td class="d-none d-md-table-cell">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <!-- Mobile: Tên chức vụ rút gọn + thông tin bổ sung -->
                                        <td class="d-md-none">
                                            <div class="font-weight-bold">@Html.DisplayFor(modelItem => item.Name)</div>
                                            <small class="text-muted">
                                                @Html.DisplayFor(modelItem => item.ShortName) | 
                                                @item.DateIssued.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            @Html.DisplayFor(modelItem => item.ShortName)
                                        </td>
                                        <td class="d-none d-xl-table-cell">
                                            @Html.DisplayFor(modelItem => item.BasicPosiontConfficient)
                                        </td>
                                        <td class="d-none d-xl-table-cell">
                                            @Html.DisplayFor(modelItem => item.ResponsibilityCoefficient)
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            @Html.DisplayFor(modelItem => item.PosiontConfficient)
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            @item.DateIssued.ToString("dd/MM/yyyy")
                                        </td>
                                        <td class="d-none d-xl-table-cell">
                                            <span title="@Html.DisplayFor(modelItem => item.Description)">
                                                @(item.Description?.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)
                                            </span>
                                        </td>
                                        <td class="d-none d-xl-table-cell">
                                            <span title="@Html.DisplayFor(modelItem => item.Note)">
                                                @(item.Note?.Length > 30 ? item.Note.Substring(0, 30) + "..." : item.Note)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                                                @if (item.Status == 1)
                                                {
                                                    <a href="#" onclick="confirmDeactivate(@item.Id, '@item.Name')" class="btn btn-warning btn-sm">Hết HH</a>
                                                }
                                            </div>
                                            <div class="d-none d-md-block">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                                                @if (item.Status == 1)
                                                {
                                                    <a href="#" onclick="confirmDeactivate(@item.Id, '@item.Name')" class="btn btn-sm btn-warning">Hết hiệu lực</a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden form for deactivate action -->
<form id="deactivateForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="~/js/position-validation-vi.js"></script>
    <script>
        function confirmDeactivate(id, name) {
            if (confirm('Bạn có chắc chắn muốn đổi trạng thái của chức vụ "' + name + '" sang hết hiệu lực không?')) {
                var form = document.getElementById('deactivateForm');
                form.action = '@Url.Action("Deactivate", "TblPosition")/' + id;
                form.submit();
            }
        }
    </script>
}

