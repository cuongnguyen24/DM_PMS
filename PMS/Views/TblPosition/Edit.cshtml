@model PMS.Models.TblPosition

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="card-title mb-0">Chỉnh sửa chức vụ</h4>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                            <i class="fa fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                    <hr />
                    
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label font-weight-bold">
                                        Tên chức vụ <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên chức vụ" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ShortName" class="control-label font-weight-bold">Tên viết tắt</label>
                                    <input asp-for="ShortName" class="form-control" placeholder="Nhập tên viết tắt" />
                                    <span asp-validation-for="ShortName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TypeObject" class="control-label font-weight-bold">
                                        Loại đối tượng <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="TypeObject" class="form-control">
                                        <option value="">-- Chọn loại đối tượng --</option>
                                        <option value="1">Nhân viên</option>
                                        <option value="2">Quản lý</option>
                                        <option value="3">Cấp cao</option>
                                    </select>
                                    <span asp-validation-for="TypeObject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateIssued" class="control-label font-weight-bold">
                                        Ngày hiệu lực <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DateIssued" class="form-control" type="date" />
                                    <span asp-validation-for="DateIssued" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="BasicPosiontConfficient" class="control-label font-weight-bold">
                                        Hệ số cơ bản chức vụ
                                    </label>
                                    <input asp-for="BasicPosiontConfficient" class="form-control" type="number" step="0.01" 
                                           value="@(Model.BasicPosiontConfficient?.ToString("F2") ?? "")" 
                                           placeholder="0.00" />
                                    <span asp-validation-for="BasicPosiontConfficient" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ResponsibilityCoefficient" class="control-label font-weight-bold">
                                        Hệ số trách nhiệm
                                    </label>
                                    <input asp-for="ResponsibilityCoefficient" class="form-control" type="number" step="0.01" 
                                           value="@(Model.ResponsibilityCoefficient?.ToString("F2") ?? "")" 
                                           placeholder="0.00" />
                                    <span asp-validation-for="ResponsibilityCoefficient" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PosiontConfficient" class="control-label font-weight-bold">
                                        Hệ số chức vụ
                                    </label>
                                    <input asp-for="PosiontConfficient" class="form-control" type="number" step="0.01" 
                                           value="@(Model.PosiontConfficient?.ToString("F2") ?? "")" 
                                           placeholder="0.00" />
                                    <span asp-validation-for="PosiontConfficient" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label font-weight-bold">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả chức vụ"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Note" class="control-label font-weight-bold">Ghi chú</label>
                                    <textarea asp-for="Note" class="form-control" rows="3" placeholder="Nhập ghi chú"></textarea>
                                    <span asp-validation-for="Note" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label font-weight-bold">
                                        Trạng thái <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Status" class="form-control">
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Hết hiệu lực</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-save"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Set default date to today if empty
            if (!$('#DateIssued').val()) {
                $('#DateIssued').val(new Date().toISOString().split('T')[0]);
            }
            
            // Handle empty numeric fields
            $('input[type="number"]').each(function() {
                if ($(this).val() === '') {
                    $(this).val('');
                }
            });
        });
    </script>
}
