@{
    ViewData["Title"] = "QUẢN LÝ CHẤM CÔNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <!-- Bộ lọc -->
                <div class="row">
                    <div class="col-lg-1">
                        <label style="font-weight:bold">Chọn quý:</label>                        
                    </div>
                    <div class="col-lg-2">
                        <select class="form-control" id="selectQuarter">
                            <option value="1">Quý 1</option>
                            <option value="2">Quý 2</option>
                            <option value="3">Quý 3</option>
                            <option value="4">Quý 4</option>
                            <option value="0" selected>Cả năm</option>
                        </select>
                    </div>
                    <div class="col-lg-1">
                        <label style="font-weight:bold">Chọn năm:</label>                        
                    </div>
                    <div class="col-lg-2">
                        <select class="form-control" id="selectYear">
                            @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 1; i++)
                            {
                                var selected = i == DateTime.Now.Year ? "selected" : "";
                                <option value="@i" selected="@selected">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>Loại công:</label><br />
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="loaiCong" value="thoi_gian" checked>
                            <label class="form-check-label">Thời gian</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="loaiCong" value="ca_dem">
                            <label class="form-check-label">Ca đêm</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="loaiCong" value="them_gio">
                            <label class="form-check-label">Thêm giờ</label>
                        </div>
                    </div>
                    <div class="col-md-1 align-self-end">
                        <button id="btnTimKiem" class="btn btn-info">Tìm kiếm</button>
                    </div>
                </div>


                <!-- Kết quả load AJAX -->
                <div class="table-responsive" id="bangKetQua">
                    @Html.Partial("_TimeTable") <!-- mặc định là thời gian -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            function loadBangChamCong() {
                var loai = $('input[name="loaiCong"]:checked').val();
                var nam = $('#selectYear').val();
                var quy = $('#selectQuarter').val();
                
                console.log('Loading bảng chấm công:', { loai: loai, nam: nam, quy: quy });

                $.ajax({
                    url: '/TimeKeeping/RenderLoaiCong',
                    type: 'GET',
                    data: { loai: loai, nam: nam, quy: quy },
                    success: function (data) {
                        console.log('AJAX success, data length:', data.length);
                        $('#bangKetQua').html(data);
                        
                        // Trigger resize event để Handsontable tự động điều chỉnh kích thước
                        $(window).trigger('resize');
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX error:', { status: status, error: error, response: xhr.responseText });
                        alert("Lỗi khi tải dữ liệu: " + error);
                    }
                });
            }

            // Khi ấn nút "Tìm kiếm"
            $('#btnTimKiem').click(function () {
                console.log('Button Tìm kiếm clicked');
                loadBangChamCong();
            });

            // ✅ Khi chọn radio "loaiCong" → tự động gọi
            $('input[name="loaiCong"]').change(function () {
                console.log('Radio button changed to:', $(this).val());
                loadBangChamCong();
            });

            // ✅ (tuỳ chọn) Khi thay đổi năm cũng tự động gọi
            $('#selectYear').change(function () {
                console.log('Year changed to:', $(this).val());
                loadBangChamCong();
            });

            // ✅ (tuỳ chọn) Khi thay đổi quý cũng tự động gọi
            $('#selectQuarter').change(function () {
                console.log('Quarter changed to:', $(this).val());
                loadBangChamCong();
            });
            
            // Log trạng thái ban đầu
            console.log('TimeKeeping page loaded, initial state:', {
                selectedLoai: $('input[name="loaiCong"]:checked').val(),
                selectedYear: $('#selectYear').val(),
                selectedQuarter: $('#selectQuarter').val()
            });
            
            // Hàm test để debug
            window.testLoadTable = function(loai) {
                console.log('Testing load table for:', loai);
                $('input[name="loaiCong"][value="' + loai + '"]').prop('checked', true);
                loadBangChamCong();
            };

        });
    </script>
}

