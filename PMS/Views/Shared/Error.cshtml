@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <h1 class="text-danger">
                            <i class="fa fa-exclamation-triangle"></i> Lỗi
                        </h1>
                        <h2 class="text-danger">Đã xảy ra lỗi trong quá trình xử lý yêu cầu.</h2>
                        
                        @if (Model.ShowRequestId)
                        {
                            <p>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                        
                        <div class="alert alert-warning">
                            <h4>Nguyên nhân có thể:</h4>
                            <ul class="text-left">
                                <li>Không thể kết nối đến cơ sở dữ liệu</li>
                                <li>Dữ liệu không tồn tại</li>
                                <li>Lỗi hệ thống</li>
                            </ul>
                        </div>
                        
                        <div class="mt-4">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary ml-2">
                                <i class="fa fa-home"></i> Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
